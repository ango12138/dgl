pipeline {
    triggers {
        issueCommentTrigger('@dgl-bot .*')
    }
    agent {
        label 'linux-c52x-node'
    }
    stages {
        stage('A') {
            steps {
                sh 'env'
                script {
                    def triggerCause = currentBuild.getBuildCauses('org.jenkinsci.plugins.pipeline.github.trigger.IssueCommentCause')

                    echo("BUILD CAUSE: ${triggerCause.toString()}")
                    env.GITHUB_COMMENT
                    if (triggerCause) {
                        checkout([$class: 'GitSCM', branches: [[name: '*/master']],
                                userRemoteConfigs: [[credentialsId: 'github', url: 'https://github.com/dglai/DGL_scripts.git']]])
                        def comment = pullRequest.comment('Started the Regression test')
                    } else {
                        echo('Build was not started by a trigger')
                    }
                // echo("Comment: ${triggerCause.getComment()}")
                }
            }
            post {
                always {
                    echo '========always========'
                }
                success {
                    echo '========A executed successfully========'
                }
                failure {
                    echo '========A execution failed========'
                }
            }
        }
    }
    post {
        always {
            echo '========always========'
        }
        success {
            echo '========pipeline executed successfully ========'
        }
        failure {
            echo '========pipeline execution failed========'
        }
    }
}

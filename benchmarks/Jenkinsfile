pipeline {
    triggers {
        issueCommentTrigger('@dgl-bot .*')
    }
    agent {
        label 'linux-c52x-node'
    }
    stages {
        stage('A') {
            steps {
                sh 'env'
                script {
                    def triggerCause = currentBuild.getCause(org.jenkinsci.plugins.pipeline.github.trigger.PullRequestReviewCause)

                    echo("BUILD CAUSE: ${triggerCause.toString()}")
                    env.GITHUB_COMMENT
                    if (env.GITHUB_COMMENT) {
                        echo("Build was started by ${triggerCause.userLogin}, who wrote: " +
                        "\"${triggerCause.comment}\", which matches the " +
                        "\"${triggerCause.triggerPattern}\" trigger pattern.")
                        def comment = pullRequest.comment('Started the Regression test')
                    } else {
                        echo('Build was not started by a trigger')
                    }
                // echo("Comment: ${triggerCause.getComment()}")
                }
            }
            post {
                always {
                    echo '========always========'
                }
                success {
                    echo '========A executed successfully========'
                }
                failure {
                    echo '========A execution failed========'
                }
            }
        }
    }
    post {
        always {
            echo '========always========'
        }
        success {
            echo '========pipeline executed successfully ========'
        }
        failure {
            echo '========pipeline execution failed========'
        }
    }
}
